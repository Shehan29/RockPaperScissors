<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="boss_apps.rockpaperscissors.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#616161">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROCK"
        android:id="@+id/rockBtn"
        android:layout_marginTop="89dp"
        android:background="#b30000"
        android:allowUndo="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_below="@+id/weaponChoiceText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAPER"
        android:id="@+id/paperBtn"
        android:background="#f9f9f9"
        android:allowUndo="false"
        android:textColor="#000000"
        android:layout_alignTop="@+id/rockBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCISSORS"
        android:id="@+id/scissorBtn"
        android:background="#028300"
        android:allowUndo="false"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/paperBtn"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Your Weapon"
        android:id="@+id/weaponChoiceText"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:textIsSelectable="false"
        android:textStyle="bold|italic"
        android:textColor="#cec6be"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scissorBtn"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CPU CHOOSES"
        android:id="@+id/cpuChoiceText"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textIsSelectable="false"
        android:textStyle="bold|italic"
        android:textColor="#cec6be"
        android:textAlignment="center"
        android:layout_below="@+id/rockBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OUTCOME"
        android:id="@+id/outcomeText"
        android:textAlignment="center"
        android:textColor="#cec6be"
        android:textSize="45dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scissorBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="               "
        android:id="@+id/textView"
        android:textSize="40dp"
        android:background="#0076de"
        android:layout_alignBottom="@+id/cpuChoice"
        android:layout_alignStart="@+id/cpuChoice"
        android:layout_alignEnd="@+id/cpuChoice" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WEAPON"
        android:id="@+id/cpuChoice"
        android:textAlignment="center"
        android:background="#0076de"
        android:textStyle="bold"
        android:textSize="16dp"
        android:minHeight="38dp"
        android:layout_below="@+id/cpuChoiceText"
        android:layout_marginTop="60dp"
        android:layout_alignEnd="@+id/paperBtn"
        android:layout_alignStart="@+id/paperBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="BOSS APPS Â©"
        android:id="@+id/companyName"
        android:textColor="@color/switch_thumb_material_dark"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
